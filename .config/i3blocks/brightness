PERCENTAGE=$(~/.config/scripts/ssh-host-arm64.sh "/usr/local/bin/brightness -l | grep brightness | sed 's/.*brightness //' | xargs -I@ echo '100 * @' | bc -l | sed 's/\..*//'")

if [ "$PERCENTAGE" -gt "50" ]; then
  ICON=
else
  ICON=
fi

# If brightness can't be attained display 100
if [ "$PERCENTAGE" -eq "0" ]; then
  PERCENTAGE=100
fi

echo $ICON $PERCENTAGE%
